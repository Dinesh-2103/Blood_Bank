<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardimage"
                app:cardCornerRadius="20dp"
                android:layout_margin="4dp"
                android:layout_width="150dp"
                android:layout_height="100dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/image"
                    android:background="@drawable/border_background"
                    android:src="@drawable/blood_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/message"
                android:padding="8dp"
                android:background="#00D8D8D8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardimage"
                android:layout_alignBottom="@id/cardimage"
                android:layout_alignTop="@id/cardimage"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cardimage"
                android:layout_marginTop="5dp"
                android:id="@+id/balck_line"
                android:background="@color/black"/>

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/balck_line"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/baseline_close_24" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/call_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/balck_line"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/call_black_24" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/share_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/balck_line"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/share_24" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>